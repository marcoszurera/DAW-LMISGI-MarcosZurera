{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/customer.schema.json",
  "title": "Customer",
  "type": "object",
  "required": ["customer"],
  "properties": {
    "customer": {
      "type": "object",
      "required": ["cust_id", "fed_id", "type"],
      "properties": {
        "cust_id": {
          "type": "integer"
        },
        "address": {
          "type": "string"
        },
        "city": {
          "type": "string"
        },
        "fed_id": {
          "type": "string"
        },
        "postal_code": {
          "type": "string"
        },
        "state": {
          "type": "string",
          "enum": ["MA", "NH", "RI", "VE", "CN", "NY"]
        },
        "type": {
          "type": "string",
          "enum": ["individual", "business"]
        }
      },
      "allOf": [
        {
          "if": {
            "properties": { "type": { "const": "individual" } }
          },
          "then": {
            "required": ["first_name_ind", "last_name_ind"],
            "properties": {
              "first_name_ind": { "type": "string" },
              "last_name_ind": { "type": "string" },
              "birth_date": { "type": "string", "format": "date" }
            }
          }
        },
        {
          "if": {
            "properties": { "type": { "const": "business" } }
          },
          "then": {
            "required": ["name", "state_id", "officer"],
            "properties": {
              "name": { "type": "string" },
              "state_id": { "type": "string" },
              "incorp_date": { "type": "string", "format": "date" },
              "officer": {
                "type": "array",
                "minItems": 1,
                "items": {
                  "type": "object",
                  "required": ["officer_id", "first_name_off", "last_name_off"],
                  "properties": {
                    "officer_id": { "type": "integer" },
                    "first_name_off": { "type": "string" },
                    "last_name_off": { "type": "string" },
                    "end_date": { "type": "string", "format": "date" },
                    "start_date": { "type": "string", "format": "date" },
                    "title": {
                      "type": "string",
                      "enum": ["President", "CEO"]
                    }
                  }
                }
              }
            }
          }
        }
      ]
    }
  }
}